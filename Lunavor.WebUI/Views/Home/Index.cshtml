@model IEnumerable<Lunavor.WebUI.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Teknolojik Dönüşümün Sessiz Temsilcisi</h1>
                <p class="lead">Lunavor olarak, işletmenizin dijital dönüşüm sürecinde yanınızdayız. Yenilikçi ve ölçeklenebilir çözümlerle işinizi bir adım öne taşıyoruz.</p>
                <div class="hero-buttons">
                    <a href="/iletisim" class="btn btn-primary btn-lg">Bizimle İletişime Geçin</a>
                    <a href="/hizmetler" class="btn btn-outline-light btn-lg">Hizmetlerimiz</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hizmetler Section -->
<section id="hizmetler" class="services-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Hizmetlerimiz</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="service-card">
                    <i class="fas fa-laptop-code service-icon"></i>
                    <h3>Web Sitesi Tasarımı</h3>
                    <p>Modern ve responsive web siteleri ile dijital varlığınızı güçlendiriyoruz.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="service-card">
                    <i class="fas fa-cogs service-icon"></i>
                    <h3>.NET Çözümleri</h3>
                    <p>Kurumsal ihtiyaçlarınıza özel ERP ve CRM çözümleri geliştiriyoruz.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="service-card">
                    <i class="fas fa-rocket service-icon"></i>
                    <h3>Startup Projeleri</h3>
                    <p>Yenilikçi fikirlerinizi hayata geçirmeniz için teknoloji desteği sağlıyoruz.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Neden Biz Section -->
<section class="why-us-section py-5 bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Neden Biz?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <i class="fas fa-users feature-icon"></i>
                    <h3>Uzman Ekip</h3>
                    <p>Alanında uzman ekibimizle en iyi çözümleri sunuyoruz.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <i class="fas fa-clock feature-icon"></i>
                    <h3>Hızlı Teslimat</h3>
                    <p>Projelerinizi zamanında ve kaliteli bir şekilde teslim ediyoruz.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <i class="fas fa-handshake feature-icon"></i>
                    <h3>Müşteri Memnuniyeti</h3>
                    <p>Müşteri memnuniyeti odaklı çalışma prensibimizle fark yaratıyoruz.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- İletişim CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mb-4">Projenizi Hayata Geçirmeye Hazır mısınız?</h2>
                <p class="lead mb-4">Bizimle iletişime geçin, dijital dönüşüm yolculuğunuza birlikte başlayalım.</p>
                <a href="/iletisim" class="btn btn-primary btn-lg">İletişime Geçin</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde animasyonları başlat
        $(document).ready(function() {
            $('.card').addClass('animate__animated animate__fadeIn');
        });
    </script>
}
